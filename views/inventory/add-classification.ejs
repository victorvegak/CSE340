<% if (title) { %>
    <h1>
      <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
  
      <%- messages() %>
  
        <% if (errors) { %>
          <ul class="notice">
            <% errors.array().forEach(error=> { %>
              <li>
                <%= error.msg %>
              </li>
              <% }) %>
          </ul>
          <% } %>
  
            <form class="login-form" action="/inv/add-classification" method="post">
              <fieldset>
                <label class="top">Classification Name* <input type="text" name="classification_name"
                    required id="classification_name" pattern="^[a-zA-Z]*$" ></label>
                <p>Name must be alphabetic characters only</p>
                <input type="submit" value="Add Classification" class="submitBtn">
              </fieldset>
            </form>