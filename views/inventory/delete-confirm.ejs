<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <% } else { res.redirect('/') } %>
    <div id="edit-inventory-main">
      <%- messages() %>

        <% if (errors) { %>
          <ul class="notice">
            <% errors.array().forEach(error=> { %>
              <li>
                <%= error.msg %>
              </li>
              <% }) %>
          </ul>
          <% } %>

            <form class="login-form" id="updateForm" action="/inv/update" method="post">
              <fieldset>
                <label class="top" id="classification-label">Classification* <%- classificationList %></label>
                <label class="top">Make* <input type="text" name="inv_make" required id="inv_make"
                    value="<%= locals.inv_make %>"></label>
                <label class="top">Model* <input type="text" name="inv_model" required id="inv_model"
                    value="<%= locals.inv_model %>"></label>
                <label class="top">Description* <textarea name="inv_description" id="inv_description" rows="6" cols="40" ><%= locals.inv_description %></textarea></label>

                <label class="top">Image Path* <input type="text" name="inv_image" required id="inv_image" value=<%-
                    locals.inv_image %>></label>
                <label class="top">Thumbnail Path* <input type="text" name="inv_thumbnail" required id="inv_thumbnail"
                    value=<%- locals.inv_thumbnail %>></label>
                <label class="top">Price* <input type="number" name="inv_price" required id="inv_price"
                    pattern="^[0-9]*$" value="<%= locals.inv_price %>"></label>
                <label class="top">Year* <input type="number" name="inv_year" required id="inv_year" pattern="^[0-9]*$"
                    value="<%= locals.inv_year %>"></label>
                <label class="top">Miles* <input type="number" name="inv_miles" required id="inv_miles"
                    pattern="^[0-9]*$" value="<%= locals.inv_miles %>"></label>
                <label class="top">Color* <input type="text" name="inv_color" required id="inv_color"
                    value="<%= locals.inv_color %>"></label>

                <input type="submit" value="Update Vehicle" disabled class="submitBtn">
                <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                  <% } %>>
              </fieldset>
            </form>
    </div>
    <script src="../../js/inv-update.js"></script>